<div id="<%= dom_id promotion %>">
  <p>
    <strong>Name:</strong>
    <%= promotion.name %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= promotion.start_date %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= promotion.end_date %>
  </p>

  <p>
    <strong>Teacher:</strong>
    <%= Person.find(promotion.teacher_id).fullname %>
  <p>
    <strong>Students:</strong>
    <% PersonPromotion.where(promotion_id: promotion.id).each do |person_promotion| %>
    <p>
      <%= Person.find(person_promotion.person_id).fullname %>
    </p>
  <% end %>
  <%= link_to "Add student", new_lecture_promotion_path, class: "btn btn-success" %>
  </p>
</div>
