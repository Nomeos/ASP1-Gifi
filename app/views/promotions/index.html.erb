<p style="color: green"><%= notice %></p>

<h1>Promotions</h1>
<%= link_to "New", new_promotion_path, class: "btn btn-success" %>
<table class="table">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Start Date</th>
    <th scope="col">End Date</th>
    <th scope="col">Teacher</th>
  </tr>
  </thead>
  <tbody>
  <% @promotions.each do |promotion| %>
    <tr>
      <th scope="row"><%= promotion.id %></th>
      <td><%= promotion.name %></td>
      <td><%= promotion.start_date %></td>
      <td><%= promotion.end_date %></td>
      <td><%= Person.find(promotion.teacher_id).fullname %></td>
      <td><%= link_to "Show", promotion_path(promotion), class: "btn btn-warning" %></td>
    </tr>
  <% end %>
  </tbody>
</table>